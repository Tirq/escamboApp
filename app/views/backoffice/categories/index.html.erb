<%= render partial: 'layouts/shared/notifications', :locals => {:title => 'Categorias'}   %>

<%= link_to new_backoffice_category_path, style: "margin: 5px;", class: "btn btn-success  pull-right" do %>
<i class="fa fa-plus"></i>
<% end %>
<div class="panel panel-default">
	<div class="panel-heading">
		Listando categorias
	</div>
	<!-- /.panel-heading -->
	<div class="table-responsive">
		<table class="table table-hover">
			<thead>
				<tr>
					<th width="10%">Ações</th>
					<th>#</th>
					<th>Descrição</th>
				</tr>
			</thead>
			<tbody>
				<% @categories.each do |cat| %>
				<tr>
					<td width="10%">
						<%= link_to edit_backoffice_category_path(cat) , class:"btn btn-primary btn-xs" do %>
						<i class="fa fa-edit"></i>
						<% end %>
						<button type="button" disabled="disabled" class="btn btn-danger btn-xs"><i class="fa fa-times"></i>
						</button>
					</td>
					<td><%= cat.id %></td>
					<td><%= cat.description %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<!-- /.table-responsive -->
	<!-- /.panel-body -->
</div>