<%= render partial: 'layouts/shared_backoffice/notifications', :locals => {:title => 'Categorias'}   %>
<div class="panel panel-default">
	<div class="panel-heading">
		<%= action %> categoria
	</div>
	<% if @category.errors.any? %>
	<div class="alert alert-danger alert-dismissable">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
		<ul>
			<% @category.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<div class="panel-body">
		<%= form_for([ :backoffice, @category]) do |f|	%>
		<div class="form-group">
			<label>Descrição</label>
			<%= f.text_field :description, autofocus: true, class:"form-control", placeholder:"Informe a descrição" %>
		</div>
		<button type="submit" class="btn btn-default">Salvar</button>
		<% end %>
		
	</div>
</div>